  <%= search_form_for( @q, url: properties_path) do |f| %>
    <div class="row">
      <div class="col-3">
        <%= f.search_field :name_cont,class: 'form-control form-control-sm', placeholder: "例　賃貸マンション"  %>
      </div>
      <div class="row-cols-auto">
        <%= f.submit '物件検索', class: 'btn btn-outline-primary btn-sm' %>
      </div>
